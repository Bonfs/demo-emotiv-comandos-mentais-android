<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragStatus"
    android:tag="status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/arc_progress"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:arc_finished_color="@color/primary_dark"
        app:arc_unfinished_color="@color/primary_light"
        app:arc_text_size="72sp"
        app:arc_progress="55"
        app:arc_suffix_text=" "
        app:arc_text_color="@color/primary"
        app:arc_bottom_text="QUALIDADE DO SINAL"
        app:arc_bottom_text_size="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</android.support.constraint.ConstraintLayout>
